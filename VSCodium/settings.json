{
    // Установить собственный шрифт и его размеры
    "editor.fontFamily": "BlexMono Nerd Font",
    "editor.fontSize": 17,

    // Установить иконки и настроить их
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.hidesExplorerArrows": true,
    "workbench.tree.indent": 14,

    // Установить тему по дефолту
    "workbench.colorTheme": "Dracula Theme Soft",

    // Отсчет строчки относительно текущего курсора
    "editor.lineNumbers": "relative",

    // Запрашивать подтверждение на удаление и Drag&Drop
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,

    // Настройка excalidraw по дефолту
    "excalidraw.workspaceLibraryPath": ".",
    "excalidraw.theme": "dark",
    
    // Убрать статус бар снизу
    "workbench.statusBar.visible": false,

    // Настройка drawio
    "hediet.vscode-drawio.resizeImages": null,

    // Не показывать все открытые вкладки
    "workbench.editor.showTabs": "single",

    // Установить дефолтный размер для редактора
    "window.zoomLevel": 1,

    // Настройка курсора
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.cursorBlinking": "solid",

    // Настройка плагина todo
    "todohighlight.isEnable": true,

    // По дефолту открывать пустую страницу
    "workbench.startupEditor": "none",

    // Добавлять одну пустую строку в конец файла чтобы избежать ошибоки
    "files.insertFinalNewline": true,

    // Отключаем окно с помощью для новичков
    "workbench.tips.enabled": false,

    // Убирает вертикальные линии отступов в дереве файлов
    "workbench.tree.renderIndentGuides": "none",

    // Всегда использовать те отступы, которые заданы вручную (tabSize, insertSpaces и т.п.), а не угадывать.
    "editor.detectIndentation": false,

    // Отключает вертикальные линии отступов в редакторе
    "editor.guides.indentation": false,

    // Не показывает пробелы, табы, перевод строки и т.п. символы в редакторе
    "editor.renderWhitespace": "none",

    // Отключает подсветку активной строки
    "editor.renderLineHighlight": "none",

    // Автосохранение файлов через короткую паузу после редактирования
    "files.autoSave": "afterDelay",

    // Отключает автообновления VS Code / VSCodium
    "update.mode": "none",

    // Отключает всплывающие предложения установить расширения
    "extensions.ignoreRecommendations": true,
    "git.enableSmartCommit": true,
    "redhat.telemetry.enabled": true,
    "workbench.activityBar.location": "hidden",
}
